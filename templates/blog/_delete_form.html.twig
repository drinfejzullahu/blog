<form method="post" action="{{ path('blog_delete', {'id': blog.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

    <div class="form-group">

        <input type="hidden" class="form-control" name="_method" value="DELETE">
        <input type="hidden" class="form-control" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
    </div>
    <button class="btn btn-danger">Delete</button>
</form>
