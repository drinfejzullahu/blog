{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1 class = "mb-5">Blog</h1>

    <table class="table">
        <tbody>

        <tr>
            <th>Title</th>
            <td>{{ blog.title }}</td>
        </tr>
        <tr>
            <th>Body</th>
            <td>{{ blog.body }}</td>
        </tr>
        <tr>
            <th>Private</th>
            <td>{{ blog.private ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('index_page') }}">Back</a>
    {% if app.user.admin %}
        <a class="btn btn-default" href="{{ path('blog_edit', {'id': blog.id}) }}">Edit</a>

        {{ include('blog/_delete_form.html.twig') }}

    {% endif %}
{% endblock %}
