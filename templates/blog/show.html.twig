{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1 class="mb-5">Blog</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Photo</th>
            <td><img style="width:400px;height: 400px" src="../images/{{ blog.photoPath }}"/></td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ blog.title }}</td>
        </tr>
        <tr>
            <th>Body</th>
            <td>{{ blog.body }}</td>
        </tr>
        <tr>
            <th>Private</th>
            <td>{{ blog.private ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>
    <div class="row  mt-5">

        <a style = "height:38px " class=" mt-3 ml-4 btn btn-primary mr-3" href="{{ path('index_page') }}">Back </a>
        {% if app.user.admin %}
            <a style = "height:38px "  class=" mt-3 mr-3 btn btn-primary" href="{{ path('blog_edit', {'id': blog.id}) }}">Edit</a>

            {{ include('blog/_delete_form.html.twig') }}

        {% endif %}
    </div>
{% endblock %}
