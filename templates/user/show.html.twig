{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <table class="table mt-5">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Admin</th>
                {% if user.admin == 1 %}
                <td>Yes</td>
                {% else %}
                <td>No</td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <a class = "btn btn-default" href="{{ path('user_index') }}">Back to List</a>

    <a class = "btn btn-default" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
