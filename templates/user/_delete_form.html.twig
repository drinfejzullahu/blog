<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <div class="form-group">

    <input type="hidden" class="form-control" name="_method" value="DELETE">
    <input type="hidden" class="form-control" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    </div>
<button class="btn btn-danger">Delete</button>
</form>
